<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <size android:height="10dp" />
            <corners android:radius="5dp" />
            <gradient
                android:angle="270"
                android:endColor="#ccd3d8"
                android:startColor="#ccd3d8" />
        </shape>
    </item>
    <item>
        <clip>
            <shape android:shape="rectangle" >
                <corners android:radius="5dp" />

                <gradient
                    android:angle="270"
                    android:endColor="#50ce65"
                    android:startColor="#50ce65" />
                <size android:height="10dp" />
            </shape>

        </clip>
    </item>

</layer-list>
